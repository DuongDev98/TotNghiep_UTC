@model WebApplication.Models.DKHUYENMAI

@{
    ViewBag.Title = "Chỉnh sửa khuyến mại";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.NAME, "Đợt khuyến mại", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-11">
                @Html.EditorFor(model => model.NAME, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NAME, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.TUGIO, "Từ giờ", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TUGIO, new { htmlAttributes = new { @class = "form-control", @type = "time", Value = (Model.TUGIO??DateTime.Now).ToString("HH:mm") } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TUNGAY, "Từ ngày", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TUNGAY, new { htmlAttributes = new { @class = "form-control", @type = "date", Value = (Model.TUNGAY ?? DateTime.Now).ToString("yyyy-MM-dd") } })
                        @Html.ValidationMessageFor(model => model.TUNGAY, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.DENGIO, "Đến giờ", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DENGIO, new { htmlAttributes = new { @class = "form-control", @type = "time", Value = (Model.DENGIO ?? DateTime.Now).ToString("HH:mm") } })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.DENNGAY, "Đến ngày", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DENNGAY, new { htmlAttributes = new { @class = "form-control", @type = "date", Value = (Model.DENNGAY ?? DateTime.Now).ToString("yyyy-MM-dd") } })
                        @Html.ValidationMessageFor(model => model.DENNGAY, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.PHANTRAMGIAMGIA, "Phần trăm giảm giá", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PHANTRAMGIAMGIA, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PHANTRAMGIAMGIA, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.TONGBILL, "Tổng bill", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TONGBILL, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TONGBILL, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Danh sách khuyến mại", "Index")
</div>
