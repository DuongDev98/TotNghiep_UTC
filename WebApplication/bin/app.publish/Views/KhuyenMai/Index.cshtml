@model IEnumerable<WebApplication.Models.DKHUYENMAI>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Thêm mới", "Edit", new { id = "" })
</p>
<table class="table">
    <tr>
        <th>
            Đợt khuyến mại
        </th>
        <th>
            Từ giờ
        </th>
        <th>
            Đến giờ
        </th>
        <th>
            Từ ngày
        </th>
        <th>
            Đến ngày
        </th>
        <th>
            Phần trăm giảm
        </th>
        <th>
            Tổng bill
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NAME)
        </td>
        <td>
            @{
                DateTime temp = item.TUGIO ?? DateTime.Now;
            }
            @temp.ToString("HH:mm")
        </td>
        <td>
            @{
                temp = item.DENGIO ?? DateTime.Now;
            }
            @temp.ToString("HH:mm")
        </td>
        <td>
            @{
                temp = item.TUNGAY ?? DateTime.Now;
            }
            @temp.ToString("dd/MM/yyyy")
        </td>
        <td>
            @{
                temp = item.DENNGAY ?? DateTime.Now;
            }
            @temp.ToString("dd/MM/yyyy")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PHANTRAMGIAMGIA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TONGBILL)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
