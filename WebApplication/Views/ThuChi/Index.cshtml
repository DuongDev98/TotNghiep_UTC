@{
    ViewBag.Title = "Danh sách phiếu chi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ngày</th>
            <th scope="col">Số phiếu</th>
            <th scope="col">Nhà cung cấp</th>
            <th scope="col">Chi</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model != null && Model.Rows.Count > 0)
            {
                int i = 1;
                foreach (System.Data.DataRow row in Model.Rows)
                {
                    <tr>
                        <th scope="row">@i</th>
                        <td>@row["NGAY"]</td>
                        <td>@row["NAME"]</td>
                        <td>@row["NHACUNGCAP"]</td>
                        <td>@row["CHI"]</td>
                        <td class="justify-content-end">
                            <a href="/ThuChi/ExportPdf?id=@row["ID"]"><div class="btn btn-success">Xuất file</div></a>
                            <a style="margin-left: 10px;" href="/ThuChi/AddOrEdit?id=@row["ID"]&DNHACUNGCAPID=&soTien=0"><div class="btn btn-warning">Chỉnh sửa</div></a>
                            <a style="margin-left: 10px;" href="/ThuChi/Delete?id=@row["ID"]"><div class="btn btn-danger">Xóa</div></a>
                        </td>
                    </tr>
                    i++;
                }
            }
        }
    </tbody>
</table>