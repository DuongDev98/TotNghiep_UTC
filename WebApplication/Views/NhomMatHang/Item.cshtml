@model WebApplication.Models.DNHOMMATHANG
<form>
    <div class="form-group">
        <label for="ipCode">Mã nhóm</label>
        <input type="text" name="CODE" class="form-control" id="ipCode" placeholder="Nhập mã nhóm" value="@Model.CODE">
        <small id="ipCode" class="form-text text-muted">Mặt hàng sẽ sinh mã tự động với ký tự bắt đầu là mã nhóm hàng</small>
    </div>
    <div class="form-group">
        <label for="ipName">Nhóm hàng</label>
        <input type="text" name="NAME" class="form-control" id="ipName" placeholder="Nhập tên nhóm" value="@Model.NAME">
    </div>
</form>