@model WebApplication.Models.DMATHANG
<form enctype="multipart/form-data">
    <div class="form-group">
        <label for="ipCode">Mã hàng</label>
        @if (Model.ID != null)
        {
            <input type="text" name="CODE" class="form-control" id="ipCode" value="@Model.CODE">
        }
        else
        {
            <input type="text" name="CODE" class="form-control" id="ipCode" value="Tự động" readonly>
        }
    </div>
    <div class="form-group">
        <label for="ipName">Mặt hàng</label>
        <input type="text" name="NAME" class="form-control" id="ipName" value="@Model.NAME">
    </div>
    <div class="form-group">
        <label for="ipGiaNhap">Giá nhập</label>
        <input type="text" name="GIANHAP" class="form-control" id="ipGiaNhap" value="@Model.GIANHAP">
    </div>
    <div class="form-group">
        <label for="ipGiaBan">Giá bán</label>
        <input type="text" name="GIABAN" class="form-control" id="ipGiaBan" value="@Model.GIABAN">
    </div>
    <div class="form-group">
        <label for="ipNhomHang">Nhóm hàng</label>
        <select class="form-control" id="ipNhomHang">
            @foreach (var item in ViewBag.nhomHangs)
            {
                <option value="@item.ID">@item.NAME</option>
            }
        </select>
    </div>

    <div class="input-images"></div>
</form>