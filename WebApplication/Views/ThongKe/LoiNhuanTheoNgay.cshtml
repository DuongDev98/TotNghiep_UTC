@{
    ViewBag.Title = "Lợi nhuận theo ngày";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form action="" method="get">
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <div class="row">
                    <div class="col-2">
                        <p>Từ ngày: </p>
                    </div>
                    <div class="col-4">
                        <input type="date" class="form-control" name="fDate" value="@ViewBag.fDate">
                    </div>
                    <div class="col-2">
                        <p>Đến ngày: </p>
                    </div>
                    <div class="col-4">
                        <input type="date" class="form-control" name="tDate" value="@ViewBag.tDate">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-2">
            <button type="submit" class="btn btn-info btnRefresh">Refresh</button>
        </div>
    </div>
</form>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Mã hàng</th>
            <th scope="col">Mặt hàng</th>
            <th scope="col">Số lượng</th>
            <th scope="col">Giá nhập</th>
            <th scope="col">Giá bán</th>
            <th scope="col">Lợi nhuận</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model != null && Model.Rows.Count > 0)
            {
                int i = 1;
                foreach (System.Data.DataRow row in Model.Rows)
                {
                    <tr>
                        <th scope="row">@i</th>
                        <td>@row["CODE"]</td>
                        <td>@row["NAME"]</td>
                        <td>@row["SOLUONG"]</td>
                        <td>@row["GIANHAP"]</td>
                        <td>@row["GIABAN"]</td>
                        <td>0</td>
                    </tr>
                    i++;
                }
            }
        }
    </tbody>
</table>